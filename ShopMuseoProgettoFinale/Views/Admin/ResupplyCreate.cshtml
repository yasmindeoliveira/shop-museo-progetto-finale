@model ProductResupplyView

<div class="container p-3">

    <form id="resupplyForm" asp-controller="Admin" asp-action="ResupplyCreate" method="post" class="title-card bg-tabella row g-3">
        @Html.AntiForgeryToken()

        <div class="col-12 col-md-6">
            <label>Select Product:</label>
            <select asp-for="Resupply.ProductId" rows="10" class="d-block w-100">
                <option value=""></option>
                @foreach (Product product in Model.ProductList) {

                    <option value="@product.Id">@product.Name </option>
                }
            </select>
            <span asp-validation-for="Resupply.ProductId" class="text-danger"></span>
        </div>

        <div class="col-12 col-md-6 form-group">
            <label for="resupplyQuantity">Quantity:</label>
            <input asp-for="Resupply.Quantity" type="number" class="form-control" id="ResupplyQuantity" />
            <span asp-validation-for="Resupply.Quantity" class="text-danger"></span>
        </div>

        <div class="col-12 col-md-6 form-group">
            <label for="supplierName">Nome Fornitore:</label>
            <input asp-for="Resupply.SupplierName" type="text" class="form-control" id="supplierName">
            <span asp-validation-for="Resupply.SupplierName" class="text-danger"></span>
        </div>

        <div class="col-12 col-md-6 form-group">
            <label for="purchasePrice">Prezzo di acquisto:</label>
            <input asp-for="Resupply.Price" type="text" class="form-control" id="purchasePrice" />
            <span asp-validation-for="Resupply.Price" class="text-danger"></span>
        </div>
    </form>
    <button form="resupplyForm" type="submit" class="btn btn-small btn-primary mybutton mt-3">Registra</button>
</div>


