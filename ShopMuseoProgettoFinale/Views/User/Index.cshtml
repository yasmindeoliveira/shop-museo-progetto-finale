        </div>
    </div>
    @*-----------------------------------*@
</div>
@*-------------------------Finito Header----------------------------*@

<div class="slide-pictures-container">

    <div class="slideBoots">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">

            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100 slideImg" src="https://cdn.britannica.com/33/130833-050-462F8F09/Wheatfield-Crows-oil-canvas-Vincent-van-Gogh-1890.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100 slideImg" src="https://www.artyfactory.com/art_appreciation/great-artists/vincent-van-gogh/images/van-gogh-chateau-at-auvers-at-sunset-1890.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100 slideImg" src="https://design215.com/images/gallery/old_book_850x315.jpg" alt="Third slide">
                </div>
            </div>

            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>

        </div>
    </div>

    <div class="photoAfterSlide">
        <img style="aspect-ratio:2/1" class="d-block w-100" src="https://tandsgo.com/wp-content/uploads/2020/09/Facebook-cover-photo-pen-and-notebook-on-desk-680x259.jpg" alt="Second slide">
    </div>

    <div class="photoUnderSlide">
        <img style="aspect-ratio:2/1" class="d-block w-100" src="https://dealnews.in/wp-content/uploads/2020/12/Copy-of-Purple-Smartphone-Modern-Elegance-Technology-Gaming-Facebook-Shops-Cover-10.jpg">
    </div>

</div>

@*------------------------Finito Slides--------------------------------------
*@

<h3>Discover Our Products</h3>
<div class="container-fluid">


    <div id="spinner-loader" class="d-flex justify-content-center">
        <div class="spinner-border" role="status">
            <span style="width:100px;" class="sr-only"></span>
        </div>
    </div>

    <div class="row d-flex justify-content-center">
        <div class="d-flex justify-content-center p-5">

            <div id="productsDiv" class="row"></div>
            <div id="noProductsDiv" class="d-none text-center"> No Products To Show </div>
        </div>
    </div>

</div>


</div>


@section Scripts {
    <script type="text/javascript">

        loadList();

        document.getElementById("search").addEventListener("keyup", searchProducts);

        function searchProducts() {
            let stringaDiRicerca = document.getElementById("search").value;

            console.log(stringaDiRicerca);
            loadList(stringaDiRicerca);
        }

        debugger;

        function loadList(searchString) {

            axios.get("/api/products", {
                params: {
                    search: searchString
                }
            }).then((res) => {
                if (res.data.length == 0) {
                    document.querySelector("#noProductsDiv").classList.remove("d-none");
                    document.querySelector("#productsDiv").classList.add("d-none");
                    debugger;
                } else {
                    document.querySelector("#productsDiv").classList.remove("d-none");
                    document.querySelector("#noProductsDiv").classList.add("d-none");

                    document.querySelector("#productsDiv").innerHTML = "";

                    res.data.forEach(product => {
                        formatter = Intl.NumberFormat('it-IT', {
                            style: 'currency',
                            currency: 'EUR'
                        });


                        document.querySelector("#productsDiv").innerHTML += `
                        <div class="col-lg-4 p-3">
                    <a href='/User/Buy/${product.id}' class="url-box">
                <figure class='newsCard news-Slide-up '>
                            <img src="${product.pictureUrl}" />
                    <div class='newsCaption px-4'>
                        <div class="d-flex align-items-center justify-content-between cnt-title">
                                    <h5 class='newsCaption-title text-white m-0'>${product.name}</h5>
                                            

                                    <i class="fas fa-arrow-alt-circle-right "></i>
                        </div>
                        <div class='newsCaption-content d-flex'>
                                    <p class="col-10 py-3 px-0"> ${formatter.format(product.price)}
                        </div>
                    </div>
                    <span class="overlay"></span>
                </figure>
            </a>
        </div>
                        `;
                    });
                }

                document.querySelector("#spinner-loader").classList.add("d-none");

            }).catch((error) => {
                console.log(error);
                document.querySelector("#noProductsDiv").classList.remove("d-none");
                document.querySelector("#spinner-loader").classList.add("d-none");
                document.querySelector("#productsDiv").classList.add("d-none");
            });

        }

    </script>
}