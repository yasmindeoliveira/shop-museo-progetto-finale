            <span style="width:100px;" class="sr-only"></span>

        </div>
    </div>
    <div class="row d-flex justify-content-center w-100">
        <div class="col-12 col-md-6">
            <form class="d-flex" role="search">
                <input id="searchBox" type="search" class="form-control me-2" placeholder="Cerca un prodotto" aria-label="Cerca" />
            </form>
        </div>
    </div>
    <div class="row d-flex justify-content-center w-100">
        <div class="col-12 col-lg-9 col-md-10 d-flex justify-content-center">
            <div id="productsDiv" class="row w-100"></div>
            <div id="noProductsDiv" class="d-none text-center"> No Products To Show </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(function () {
            loadList();

            $('#searchBox').on("keyup", searchProducts);

            function searchProducts() {
                let stringaDiRicerca = $("#searchBox").val();

                console.log(stringaDiRicerca);
                loadList(stringaDiRicerca);
            }

            function loadList(searchString) {

                axios.get("/api/products", {
                    params: {
                        search: searchString
                    }
                }).then((res) => {
                    if (res.data.length == 0) {
                        document.querySelector("#noProductsDiv").classList.remove("d-none");
                        document.querySelector("#productsDiv").classList.add("d-none");
                    } else {
                        document.querySelector("#productsDiv").classList.remove("d-none");
                        document.querySelector("#noProductsDiv").classList.add("d-none");

                        document.querySelector("#productsDiv").innerHTML = "";

                        res.data.forEach(product => {
                            formatter = Intl.NumberFormat('it-IT', {
                                style: 'currency',
                                currency: 'EUR'
                            });

                            let liked = false;
                            product.likes.forEach(like => {
                                if (like.userId == $('#userId').attr('userId')) {
                                    liked = true;
                                }
                            });


                            $("#productsDiv").append(`
            <div class="col-md-4 col-12 p-3 m-0">
                <a href="/User/Buy/${product.id}" class="url-box text-decoration-none text-white">
                </a>
                <figure class="newsCard news-Slide-up ">
                    <a href="/User/Buy/${product.id}" class="url-box text-decoration-none text-white">
                        <img class="object-fit-cover" src="${product.pictureUrl}">
                    </a>
                    <div class="newsCaption px-4">
                        <a href="/User/Buy/${product.id}" class="url-box text-decoration-none text-white">
                            <div class="d-flex align-items-center justify-content-between cnt-title">
                                <h5 class="newsCaption-title text-white m-0">${product.name}</h5>
                                <i class="fas fa-arrow-alt-circle-right " aria-hidden="true"></i>
                            </div>
                        </a>
                        <div class="newsCaption-content d-flex">
                            <a href="/User/Buy/${product.id}" class="url-box text-decoration-none text-white">
                            </a>
                            <div class="col-10 py-3 px-1 text-start">
                                <a href="/User/Buy/${product.id}" class="url-box text-decoration-none text-white">
                                    ${formatter.format(product.price)} <br><br>
                                </a>
                                <button class="likeButton border-0 bg-transparent ${liked ? "text-danger" : ""}" productid=${product.id}>
                                    <i class="fas fa-heart" aria-hidden="true"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <span class="overlay"></span>
                </figure>
            </div>
                                            `);
                        });
                    }

                    document.querySelector("#spinner-loader").classList.add("d-none");

                    $('[productid]').on('click', function () {
                        let button = $(this);
                        let liked = button.hasClass('text-danger');
                        let productId = button.attr('productid');
                        debugger;
                        if (liked) {
                            axios.delete(`https://localhost:7128/api/removelike/${productId}`)
                                .then(function (res) {
                                    button.removeClass('text-danger');
                                })
                                .catch(function (err) {
                                    window.location.href = "https://localhost:7128/Identity/Account/Register"
                                });
                        } else {
                            axios.put(`https://localhost:7128/api/addlike/${productId}`)
                                .then(function (res) {
                                    button.addClass('text-danger');
                                })
                                .catch(function (err) {
                                    window.location.href = "https://localhost:7128/Identity/Account/Register"
                                });
                        }
                    });

                }).catch((error) => {
                    console.log(error);
                    document.querySelector("#noProductsDiv").classList.remove("d-none");
                    document.querySelector("#spinner-loader").classList.add("d-none");
                    document.querySelector("#productsDiv").classList.add("d-none");
                });
            }
        });
    </script>
}